{% extends '_layout' %}
{# Fetch the categories #}
{% set categories = craft.categories().group('locations').all() %}


{% block content %}
<section class="bg-white py-24">
    {% nav category in categories %}
    {% set posts = craft.entries.relatedTo(category).all() %}
        <div class="mx-auto max-w-7xl px-6 lg:px-8 py-8">
            <div class="mx-auto max-w-2xl text-center">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{{ category.title }}</h2>
            </div>
            <div class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
            {% for town in posts %}
                <article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
                    <picture class="absolute inset-0 -z-10 h-full w-full object-cover">
                        <img loading="lazy" src="{{ town.townImage.one().url }}" srcset="{{ town.townImage.one().getSrcset(['1.5x', '2x', '3x']) }}" alt="{{ town.title }}">
                    </picture>
                    <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
                    <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>

                    <h3 class="mt-3 text-2xl font-semibold leading-6 text-white">
                    <a href="{{ town.url }}">
                        <span class="absolute inset-0"></span>
                        {{ town.title }}
                    </a>
                    </h3>
                </article>
            {% else %}
                <span class="text-center">Nothing yet...</span>
            {% endfor %}
            </div>
        </div>
    {% endnav %}
</section>

{% endblock %}